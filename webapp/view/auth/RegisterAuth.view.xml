<mvc:View
    controllerName="rgssoa.controller.auth.RegisterAuth"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fsemantic="sap.f.semantic"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:semantic="sap.m.semantic">

    <semantic:FullscreenPage
        id="authDetail"
		navButtonPress="onNavBack"
		showNavButton="false">

        <semantic:content>
            <core:Fragment fragmentName="rgssoa.view.fragment.auth.detail.registerAuth" type="XML"/>
        </semantic:content>     
        
        <Panel>		
            <l:Grid defaultSpan="XL12 L12 M12 S12" vSpacing="0">						
                <Button 
                    id="btnBack"
                    class="button"
                    tooltip="{i18n>authDetailButtonBack}"
                    text="{i18n>authDetailButtonBack}"
                    width="100%"
                    type="Emphasized"
                    press="onNavBack">
                    <layoutData><l:GridData  span="XL2 L2 M6 S12" /></layoutData>
                </Button>
                <Button 
                    id="btnRegister"
                    class="button"
                    tooltip="{i18n>authDetailButtonRegistraAutorizzazione}"
                    text="{i18n>authDetailButtonRegistraAutorizzazione}"
                    width="100%"
                    type="Emphasized"
                    visible="{AuthButtonSet>/btnRegisterAuthVisible}"
                    enabled="{AuthorityCheckAuth>/Z01Enabled}"
                    press="onRegisterAuth">
                    <layoutData><l:GridData  span="XL2 L2 M6 S12" indent="XL8 L8" /></layoutData>
                </Button>                
            </l:Grid>
        </Panel>	
               
    </semantic:FullscreenPage>
</mvc:View>