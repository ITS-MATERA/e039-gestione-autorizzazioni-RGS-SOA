<mvc:View
	controllerName="rgssoa.controller.soa.detail.scenery.Scenario1"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
	xmlns:f="sap.f"
>
	<f:DynamicPage
		showFooter="true"
		class="sapUiNoContentPadding"
	>
		<f:header>
			<f:DynamicPageHeader
				pinnable="false"
				class="noPadding"
			>
				<c:Fragment
					fragmentName="rgssoa.view.fragment.panel.HeaderSoa"
					type="XML"
				/>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<c:Fragment
				fragmentName="rgssoa.view.fragment.detail.Scenario1"
				type="XML"
			/>
		</f:content>
		<f:footer>
			<OverflowToolbar>
				<Button
					type="Emphasized"
					text="{i18n>btnBack}"
					press="onNavBack"
				>
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
				<Button
					type="Emphasized"
					text="{i18n>btnForward}"
					press="onNavForward"
					visible="{StepScenario>/visibleBtnForward}"
				>
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
				<ToolbarSpacer/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>