<mvc:View
	controllerName="rgssoa.controller.soa.create.scenery.Scenario2"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
	xmlns:f="sap.f"
>
	<f:DynamicPage
		showFooter="true"
		class="sapUiNoContentPadding"
	>
		<f:header>
			<f:DynamicPageHeader
				pinnable="false"
				class="noPadding"
			>
				<c:Fragment
					fragmentName="rgssoa.view.fragment.panel.HeaderSoa"
					type="XML"
				/>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<NavContainer>
				<pages>
					<Page showHeader="false">
						<content>
							<Wizard
								id="wizScenario2"
								showNextButton="false"
							>
								<WizardStep title="{i18n>titleWizard1DocContabili}">
									<c:Fragment
										fragmentName="rgssoa.view.fragment.panel.FiltersPosizioni"
										type="XML"
									/>
									<c:Fragment
										fragmentName="rgssoa.view.fragment.table.TablePosizioniScen2"
										type="XML"
									/>
									<c:Fragment
										fragmentName="rgssoa.view.fragment.table.TableRiepPosizioniScen2"
										type="XML"
									/>
								</WizardStep>
								<WizardStep title="{i18n>titleWizard2}">
									<c:Fragment
										fragmentName="rgssoa.view.fragment.soa.create.wizard2.BeneficiarioSoa"
										type="XML"
									/>
								</WizardStep>
								<WizardStep title="{i18n>titleWizard3}">
									<c:Fragment
										fragmentName="rgssoa.view.fragment.soa.create.wizard3.Classificazione"
										type="XML"
									/>
								</WizardStep>
								<WizardStep title="{i18n>titleWizard4}">
									<c:Fragment
										fragmentName="rgssoa.view.fragment.soa.create.wizard4.DatiSoa"
										type="XML"
									/>
								</WizardStep>
							</Wizard>
						</content>
					</Page>
				</pages>
			</NavContainer>
		</f:content>
		<f:footer>
			<OverflowToolbar>
				<Button
					type="Emphasized"
					text="{i18n>btnBack}"
					press="onNavBack"
				>
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
				<Button
					type="Emphasized"
					text="{i18n>btnForward}"
					press="onNavForward"
					visible="{StepScenario>/visibleBtnForward}"
				>
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
				<Button
					type="Emphasized"
					text="{i18n>btnLog}"
					press="onLog"
					visible="{= ${Log>/Messaggio}.length !== 0 ? true : false}"
				>
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
				<ToolbarSpacer/>
				<Button
					type="Emphasized"
					text="{i18n>btnStart}"
					press="onStart"
					visible="{StepScenario>/visibleBtnStart}"
				>
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
				<Button
					type="Emphasized"
					text="{i18n>btnSaveSoa}"
					press="onSave"
					visible="{StepScenario>/visibleBtnSave}"
				>
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>