<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:l="sap.ui.layout"
>
	<Panel backgroundDesign="Transparent">
		<headerToolbar>
			<OverflowToolbar>
				<Title text="{= 
					${Utility>/EnableInvioFirma} ? ${i18n>titleDatiFirmaInvioFirma} : 
					${Utility>/EnableRegistrazioneRichAnn} ? ${i18n>titleDatiFirmaRegistrazioneRichAnn} : 
					${i18n>titleDatiFirmaCancellazioneRichAnn}
				}"/>
			</OverflowToolbar>
		</headerToolbar>
		<content>
			<l:Grid
				defaultSpan="XL12 L12 M12 S12"
				hSpacing="0.5"
			>
				<Text
					text="{i18n>inputUfficio}"
					class="sapUiTinyMarginTop sapUiLargeMarginEnd"
				>
					<layoutData>
						<l:GridData span="XL2 L2 M12 S12"/>
					</layoutData>
				</Text>
				<Input
					enabled="false"
					value="{DatiFirmatario>/ZuffcontFirm}"
				>
					<layoutData>
						<l:GridData span="XL2 L2 M12 S12"/>
					</layoutData>
				</Input>
				<Text
					text="{i18n>inputDescrizione}"
					class="sapUiTinyMarginTop sapUiLargeMarginEnd"
				>
					<layoutData>
						<l:GridData span="XL2 L2 M12 S12"/>
					</layoutData>
				</Text>
				<Input
					enabled="false"
					value="{DatiFirmatario>/ZvimDescrufficio}"
				>
					<layoutData>
						<l:GridData span="XL6 L6 M12 S12"/>
					</layoutData>
				</Input>
				<Text
					text="{i18n>inputCodiceOrdinante}"
					class="sapUiTinyMarginTop sapUiLargeMarginEnd"
				>
					<layoutData>
						<l:GridData span="XL2 L2 M12 S12"/>
					</layoutData>
				</Text>
				<!-- TODO - Rimettere non editabile -->
				<Input value="{DatiFirmatario>/Zcodord}">
					<layoutData>
						<l:GridData span="XL2 L2 M12 S12"/>
					</layoutData>
				</Input>
				<Text
					text="{i18n>inputDescrizione}"
					class="sapUiTinyMarginTop sapUiLargeMarginEnd"
				>
					<layoutData>
						<l:GridData span="XL2 L2 M12 S12"/>
					</layoutData>
				</Text>
				<Input
					enabled="false"
					value="{DatiFirmatario>/ZcodordDesc}"
				>
					<layoutData>
						<l:GridData span="XL6 L6 M12 S12"/>
					</layoutData>
				</Input>
				<Text
					text="{i18n>soaFilterFistl}"
					class="sapUiTinyMarginTop sapUiLargeMarginEnd"
				>
					<layoutData>
						<l:GridData span="XL2 L2 M12 S12"/>
					</layoutData>
				</Text>
				<Input value="{DatiFirmatario>/Fistl}">
					<layoutData>
						<l:GridData span="XL2 L2 M12 S12"/>
					</layoutData>
				</Input>
				<Text
					text="{i18n>inputDirigenteFirmato}"
					class="sapUiTinyMarginTop sapUiLargeMarginEnd"
				>
					<layoutData>
						<l:GridData span="XL2 L3 M12 S12"/>
					</layoutData>
				</Text>
				<Input value="{DatiFirmatario>/ZdirigenteAmm}">
					<layoutData>
						<l:GridData span="XL2 L3 M12 S12"/>
					</layoutData>
				</Input>
				<DatePicker
					visible="{Utility>/EnableInvioFirma}"
					valueFormat="yyyy-MM-dd"
					displayFormat="dd.MM.yyyy"
					placeholder=" "
					value="{
						path: 'Utility>/Zdataprot',
						type: 'sap.ui.model.type.Date',
						formatOptions: {
							pattern: 'dd.MM.yyyy'
						}
					}"
				>
					<layoutData>
						<l:GridData
							span="XL2 L3 M12 S12"
							linebreak="true"
							indent="XL8 L6"
						/>
					</layoutData>
				</DatePicker>
				<Button
					visible="{Utility>/EnableInvioFirma}"
					type="Emphasized"
					press="onValorizzaDataProt"
					text="{i18n>btnvalorizzaDataProt}"
					width="100%"
					enabled="{= ${Utility>/Zdataprot} ? true : false}"
				>
					<layoutData>
						<l:GridData span="XL2 L3 M12 S12"/>
					</layoutData>
				</Button>
			</l:Grid>
		</content>
	</Panel>
</c:FragmentDefinition>