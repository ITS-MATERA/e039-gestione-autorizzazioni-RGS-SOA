<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <Panel
        class="onlyTopPadding"
        visible="{= ${StepScenario>/wizard1Step2} &amp;&amp; ${Utility>/AddPositions} ? true : false}"
        backgroundDesign="Transparent"
    >
        <headerToolbar>
            <OverflowToolbar>
                <Title text="{i18n>titleListProspettiLiquidazione}" />
            </OverflowToolbar>
        </headerToolbar>
        <content>
            <Table
                id="tblAddPosizioniScen3"
                mode="MultiSelect"
                items="{
					path: 'PosizioniScen3>/'
				}"
                selectionChange="onAddSelectedItem"
                fixedLayout="false"
                growing="true"
            >
                <columns>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <header>
                            <Text text="{i18n>labelProspetto}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <header>
                            <Text text="{i18n>labelRigaProspetto}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <header>
                            <Text text="{i18n>labelDescProspLiquidazione}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <header>
                            <Text text="{i18n>labelAbbrNRegDocumento}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <header>
                            <Text text="{i18n>labelImpLiquidato}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <header>
                            <Text text="{i18n>labelImpOrdinato}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <header>
                            <Text text="{i18n>labelImpDaOrdinare}" />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Text text="{
								path: 'PosizioniScen3>Znumliq'
							}" />
                            <Text text="{PosizioniScen3>Zposizione}" />
                            <Text text="{PosizioniScen3>ZdescProsp}" />
                            <Text text="{PosizioniScen3>Belnr}" />
                            <Text
                                text="{
								path: 'PosizioniScen3>Zimpliq',
								formatter: '.formatter.convertImport'
							}"
                            />
                            <Text
                                text="{
								path: 'PosizioniScen3>Zimppag',
								formatter: '.formatter.convertImport'
							}"
                            />
                            <Input
                                id="iptAddImpDaOrd"
                                change="onAddImpDaOrdinareChange"
                                type="Number"
                                value="{
									path: 'PosizioniScen3>Zimpdaord'
								}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Panel>
</c:FragmentDefinition>
