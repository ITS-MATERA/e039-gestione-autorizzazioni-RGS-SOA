<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
>
	<Panel
		id="pnlRiepilogoQuoteDocumenti"
		class="onlyTopPadding"
		visible="{StepScenario>/wizard1Step3}"
		backgroundDesign="Transparent"
	>
		<headerToolbar>
			<OverflowToolbar>
				<Title text="{i18n>titleRiepilogoDocumentiCosto}"/>
			</OverflowToolbar>
		</headerToolbar>
		<content>
			<Table
				id="tblRiepilogoQuoteDocumenti"
				items="{
					path: 'Soa>/data'
				}"
				fixedLayout="false"
				growing="true"
			>
				<columns>
					<Column
						minScreenWidth="Desktop"
						demandPopin="true"
					>
						<header>
							<Text text="{i18n>labelAnnoRegDocumento}"/>
						</header>
					</Column>
					<Column
						minScreenWidth="Desktop"
						demandPopin="true"
					>
						<header>
							<Text text="{i18n>labelAbbrNRegDocumento}"/>
						</header>
					</Column>
					<Column
						minScreenWidth="Desktop"
						demandPopin="true"
					>
						<header>
							<Text text="{i18n>labelAbbrTipoDocumento}"/>
						</header>
					</Column>
					<Column
						minScreenWidth="Desktop"
						demandPopin="true"
					>
						<header>
							<Text text="{i18n>labelDataDocBeneficiario}"/>
						</header>
					</Column>
					<Column
						minScreenWidth="Desktop"
						demandPopin="true"
					>
						<header>
							<Text text="{i18n>labelDenomBeneficiario}"/>
						</header>
					</Column>
					<Column
						minScreenWidth="Desktop"
						demandPopin="true"
					>
						<header>
							<Text text="{i18n>labelImpDaOrdinare}"/>
						</header>
					</Column>
					<Column
						minScreenWidth="Desktop"
						demandPopin="true"
					>
						<header>
							<Text
								text="{i18n>labelProspetto}"
								visible="{= ${Soa>/ZzCebenra} ? false : true}"
							/>
						</header>
					</Column>
					<Column
						minScreenWidth="Desktop"
						demandPopin="true"
					>
						<header>
							<Text
								text="{i18n>labelRigaProspetto}"
								visible="{= ${Soa>/ZzCebenra} ? false : true}"
							/>
						</header>
					</Column>
				</columns>
				<items>
					<ColumnListItem
						vAlign="Middle"
						class="bgNotEditable"
					>
						<cells>
							<ObjectIdentifier text="{Soa>AnnoRegDocumento}"/>
							<ObjectIdentifier text="{Soa>Belnr}"/>
							<Text text="{Soa>Blart}"/>
							<Text text="{
								path: 'Soa>Bldat',
								type: 'sap.ui.model.type.Date',
								formatOptions: {
									pattern: 'dd.MM.yyyy'
								}
							}"/>
							<Text text="{Soa>ZbenaltName}"/>
							<Text text="{
								path: 'Soa>Zimpdaord',
								formatter: '.formatter.convertFormattedNumber'
							}"/>
							<Text text="{Soa>Znumliq}"/>
							<Text text="{Soa>Zposizione}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
			<c:Fragment
				fragmentName="rgssoa.view.fragment.panel.CalculatorNoEditable"
				type="XML"
			/>
		</content>
	</Panel>
</c:FragmentDefinition>