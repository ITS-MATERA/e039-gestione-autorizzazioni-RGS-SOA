<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <Panel
        class="onlyTopPadding"
        visible="{= ${StepScenario>/wizard1Step2} &amp;&amp; ${Utility>/Table} === 'Edit' ? true : false}"
        backgroundDesign="Transparent"
    >
        <headerToolbar>
            <OverflowToolbar>
                <Title text="{i18n>listDocumentiCosto}" />
                <ToolbarSpacer />
                <Button
                    class="sapUiTinyMarginEnd sapUiTinyMarginBegin sapUiTinyMarginBottom"
                    icon="sap-icon://add"
                    text="{i18n>btnAdd}"
                    type="Emphasized"
                    press="onAddPositionSoa"
                    visible="{Soa>/EnableEdit}"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                </Button>
                <Button
                    id="btnCancelPositionSoa"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBegin sapUiTinyMarginBottom"
                    icon="sap-icon://less"
                    text="{i18n>btnCancel}"
                    type="Emphasized"
                    press="onDeletePositionSoa"
                    visible="{Soa>/EnableEdit}"
                    enabled="{Utility>/EnableBtnDeleteSoa}"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                </Button>
            </OverflowToolbar>
        </headerToolbar>
        <content>
            <ScrollContainer>
                <Table
                    id="tblEditPosizioniScen2"
                    mode="MultiSelect"
                    items="{
						path: 'Soa>/data'
					}"
                    selectionChange="onSelectedItem"
                    fixedLayout="false"
                    width="120%"
                    growing="true"
                >
                    <columns>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelAnnoRegDocumento}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelAbbrNRegDocumento}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelAbbrTipoDocumento}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelDataDocBeneficiario}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelNDocBeneficiario}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelDenomBeneficiario}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                            visible="{= ${Soa>/ZspecieSop} === '1' ? true : false}"
                        >
                            <header>
                                <Text text="{i18n>labelImpQuotaDocumento}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelImpLiquidabile}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                            visible="{= ${Soa>/ZspecieSop} === '2' ? true : false}"
                        >
                            <header>
                                <Text text="{i18n>labelResiduoVersabile}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                            visible="{= ${Soa>/ZspecieSop} === '2' ? true : false}"
                        >
                            <header>
                                <Text text="{i18n>labelResiduoEsigibile}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelImpDaOrdinare}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                            visible="{= ${Soa>/ZspecieSop} === '1' ? true : false}"
                        >
                            <header>
                                <Text text="{i18n>labelDurc}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                            visible="{= ${Soa>/ZspecieSop} === '1' ? true : false}"
                        >
                            <header>
                                <Text text="{i18n>labelFermoAmministrativo}" />
                            </header>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle">
                            <cells>
                                <ObjectIdentifier
                                    text="{
									path: 'Soa>AnnoRegDoc'
								}"
                                />
                                <ObjectIdentifier text="{Soa>Belnr}" />
                                <Text text="{Soa>Blart}" />
                                <Text
                                    text="{
									path: 'Soa>Bldat',
									type: 'sap.ui.model.type.Date',
									formatOptions: {
										pattern: 'dd.MM.yyyy'
									}
								}"
                                />
                                <Text text="{Soa>Xblnr}" />
                                <Text text="{Soa>ZbenaltName}" />
                                <Text
                                    text="{
									path: 'Soa>Wrbtr',
									formatter: '.formatter.convertImport'
								}"
                                />
                                <Text
                                    text="{
									path: 'Soa>Zimpliq',
									formatter: '.formatter.convertImport'
								}"
                                />
                                <Text
                                    text="{
									path: 'Soa>Zresvers',
									formatter: '.formatter.convertImport'
								}"
                                />
                                <Text
                                    text="{
									path: 'Soa>Zresesig',
									formatter: '.formatter.convertImport'
								}"
                                />
                                <Input
                                    id="iptImpDaOrd"
                                    change="onImpDaOrdinareChangeEdit"
                                    type="Number"
                                    value="{
										path: 'Soa>Zimpdaord'
									}"
                                />
                                <Text
                                    text="{
									path: 'Soa>/Zdurc',
									formatter: '.formatter.deleteFirstZeros'
								}"
                                />
                                <Text text="{Soa>ZfermAmm}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </ScrollContainer>
        </content>
    </Panel>
</c:FragmentDefinition>
