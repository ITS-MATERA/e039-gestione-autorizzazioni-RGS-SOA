<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
	<Panel
		class="sapUiNoContentPadding"
		backgroundDesign="Transparent"
	>
		<headerToolbar>
			<OverflowToolbar>
				<Title text="{i18n>titleCig}"/>
			</OverflowToolbar>
		</headerToolbar>
		<content>
			<Table
				id="tblCig"
				mode="MultiSelect"
				fixedLayout="false"
				contextualWidth="Auto"
				growing="true"
				items="{
					path: 'Classificazione>/Cig'
				}"
			>
				<headerToolbar>
					<OverflowToolbar class="multiHeaders">
						<ToolbarSpacer/>
						<!-- TODO - Rendere enable -->
						<Button
							class="sapUiTinyMarginEnd sapUiTinyMarginBegin sapUiTinyMarginBottom"
							icon="sap-icon://add"
							text="{i18n>btnAdd}"
							type="Emphasized"
							press="onAddRow"
							app:etichetta="Cig"
							enabled="false"
						>
							<layoutData>
								<OverflowToolbarLayoutData priority="NeverOverflow"/>
							</layoutData>
						</Button>
						<!-- TODO - Rendere enable -->
						<Button
							class="sapUiTinyMarginEnd sapUiTinyMarginBegin sapUiTinyMarginBottom"
							icon="sap-icon://less"
							text="{i18n>btnCancel}"
							type="Emphasized"
							press="onCancelRow"
							app:etichetta="Cig"
							app:table="tblCig"
							enabled="false"
						>
							<layoutData>
								<OverflowToolbarLayoutData priority="NeverOverflow"/>
							</layoutData>
						</Button>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column
						minScreenWidth="Tablet"
						demandPopin="true"
						width="35%"
					>
						<header>
							<Text text="{i18n>labelCig}"/>
						</header>
					</Column>
					<Column
						minScreenWidth="Tablet"
						demandPopin="true"
					>
						<header>
							<Text text="{i18n>labelBelnr}"/>
						</header>
					</Column>
					<Column
						minScreenWidth="Tablet"
						demandPopin="true"
						width="32%"
					>
						<header>
							<Text text="{i18n>labelImpDaAssociare}"/>
						</header>
					</Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle">
						<cells>
							<Input
								id="iptCig"
								valueHelpRequest="onValueHelpCodiceGestionale"
								showValueHelp="true"
								valueHelpOnly="true"
								app:dialogName="sdCig"
								app:fragmentName="Cig"
								app:index="{Classificazione>Index}"
								width="65%"
								value="{Classificazione>Zzcig}"
							/>
							<Input
								editable="false"
								value="{Classificazione>Belnr}"
							/>
							<Input
								id="iptImpDaAssociareCig"
								width="30%"
								type="Number"
								value="{Classificazione>ZimptotClass}"
								app:index="{Classificazione>Index}"
								app:etichetta="Cig"
								change="onImpDaAssociareChange"
							/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
			<Panel backgroundDesign="Transparent">
				<l:Grid
					defaultSpan="XL12 L12 M12 S12"
					class="calculator"
				>
					<Text text="{i18n>labelImpTotCig}">
						<layoutData>
							<l:GridData
								span="XL3 L4 M5 S12"
								indent="XL5 L4 M3"
							/>
						</layoutData>
					</Text>
					<Text text="{
						path: 'Classificazione>/ImpTotAssociareCig',
						formatter: '.formatter.convertFormattedNumber'
					}">
						<layoutData>
							<l:GridData span="XL1 L1 M1 S12"/>
						</layoutData>
					</Text>
				</l:Grid>
			</Panel>
		</content>
	</Panel>
</c:FragmentDefinition>